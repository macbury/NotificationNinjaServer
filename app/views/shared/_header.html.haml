.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "#"} Notification Ninja
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.pull-right
        - if signed_in?
          %li= current_account.inspect
          %li= link_to t("header.logout"), logout_path
        - else
          %li= link_to "Github.com", github_path
    / /.nav-collapse
